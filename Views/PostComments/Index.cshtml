@model IEnumerable<MyBlog.Models.PostComment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CommentBody)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Moderated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModReason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModBody)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryPost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommentBody)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Moderated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModReason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModBody)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryPost.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogUser.UserName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
